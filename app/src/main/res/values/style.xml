<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TOTT.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/backgroundToolbar</item>
        <item name="navigationIcon">@drawable/arrow_back</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="TOTT.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/font</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
    </style>

    <style name="TOTT.FilledButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:backgroundTint">@color/colorSecondary400</item>
        <item name="android:textColor">@color/font</item>
    </style>

    <!--    글자      -->
    <style name="TOTT.Text.H1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TOTT.Text.H2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TOTT.Text.H3" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TOTT.Text.H4" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
    </style>
    <!--    글자      -->

    <style name="DefaultConstraint">
        <item name="android:background">@color/background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>