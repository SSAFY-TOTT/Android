<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TOTT.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/background</item>
        <item name="navigationIcon">@drawable/arrow_back</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="TOTT.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/font</item>
    </style>

    <style name="TOTT.Text.H3" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="DefaultConstraint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>